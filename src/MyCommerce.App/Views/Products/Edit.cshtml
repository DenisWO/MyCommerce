@model MyCommerce.App.ViewModels.ProductViewModel

@{
  ViewData["Title"] = "Editar" + Model.Name;
}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>
<hr />
<div class="row">
  <div class="col-md-5">
    <form enctype="multipart/form-data" asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />

      <div class="form-group">
        <label asp-for="ProviderId" class="control-label"></label>
        <label><b>@Model.Provider.Name</b></label>
      </div>

      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea cols="40" rows="5" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label class="control-label">Imagem Atual</label><br />
        <img src="~/img/@Model.Image" alt="@Model.Image" style="width: 70px; height: 100px" />
      </div>
      <div class="form-group">
        <label asp-for="ImageUpload" class="control-label"></label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="ImageUpload" asp-for="ImageUpload" />
          <label data-browse="Procurar" class="custom-file-label" for="ImageUpload"></label>
          <label style="display: none" id="img_name"></label>
        </div>
        <span asp-validation-for="Image" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
      </div>
      <div class="form-group form-check">
        <label class="form-check-label">
          <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
        </label>
      </div>
      <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-success" />
        <a class="btn btn-info" href="javascript:window.history.back()">Voltar</a>
      </div>
    </form>
  </div>
</div>


@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  <script>
    $("#ImageUpload").change(function () {
      $("#img_name").text(this.files[0].name);
      $("img_name")[0].style.display = 'block';
    });
  </script>
}
