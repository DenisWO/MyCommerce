@model MyCommerce.App.ViewModels.ProviderViewModel

@{
    ViewData["Title"] = "Fornecedor";
}

<h3 style="padding-top: 50px">@ViewData["Title"]</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <vc:summary></vc:summary>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document" class="control-label"></label>
                <input asp-for="Document" class="form-control" />
                <span asp-validation-for="Document" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="ProviderType" class="control-label"></label>
              <input type="radio" value="1" asp-for="ProviderType" checked /> Pessoa Física <br/>
              <input type="radio" value="2" asp-for="ProviderType" /> Pessoa Jurídica 
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
          <h4> Endereço</h4>

          <partial name="_Address"/>
          <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
            <a class="btn btn-info" asp-action="Index">Voltar</a>
          </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
  SearchZipCode();
</script>
}
