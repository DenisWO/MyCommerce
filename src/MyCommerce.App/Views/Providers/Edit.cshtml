@model MyCommerce.App.ViewModels.ProviderViewModel

@{
  ViewData["Title"] = "Editar Fornecedor";
}

<h4>@ViewData["Title"]</h4>
<hr />
<form asp-action="Edit">
  <vc:summary></vc:summary>

  <input type="hidden" asp-for="Id" />
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Name" class="control-label"></label>
      <input asp-for="Name" class="form-control" />
      <span asp-validation-for="Name" class="text-danger"></span>

      <label asp-for="Document" class="control-label"></label>
      <input asp-for="Document" class="form-control" />
      <span asp-validation-for="Document" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="ProviderType" class="control-label"></label>
      <div>
        <input type="radio" value="1" asp-for="ProviderType" checked="@(Model.ProviderType == 1)" /> Pessoa Física <br />
        <input type="radio" value="2" asp-for="ProviderType" checked="@(Model.ProviderType == 1)" /> Pessoa Jurídica
      </div>
      <div>
        &nbsp;
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <input type="submit" value="Salvar" class="btn btn-success" />
  </div>
</form>

<div id="AddressTarget">
  <partial name="_AddressDetails" />
</div>

<h4>Produtos</h4>
<hr />
<div>
  <partial name="../Products/_ProductsList" model="@Model.Products" />
</div>

<div id="myModal" class="modal fade in">
  <div class="modal-dialog">
    <div class="modal-content">
      <div id="myModalContent"></div>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

  <script>
    $(document).ready(function () {
      AjaxModel();
    });
  </script>
}
